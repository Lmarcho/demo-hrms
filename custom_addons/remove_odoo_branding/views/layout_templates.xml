<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Change the browser title ONLY on the login page -->
    <template id="login_page_title_override" inherit_id="web.layout" name="Custom Login Page Title">
        <xpath expr="//title" position="replace">
            <title>
                <t t-if="not request.session.uid">CloudERP</t>
                <t t-else="">CloudERP</t>
            </title>
        </xpath>
    </template>
</odoo>
